<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivities.SignupActivity">

    <EditText
        android:id="@+id/last_name_signup_activity"
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_marginTop="69dp"
        android:background="#E1423E11"
        android:backgroundTint="@android:color/darker_gray"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:fadingEdge="vertical"
        android:hint="Last Name"

        android:inputType="textPersonName"
        android:textColor="#070303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first_name_signup_activity" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="259dp"
        android:layout_height="166dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome_signup_activity" />

    <EditText
        android:id="@+id/first_name_signup_activity"
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_marginTop="240dp"
        android:background="#E1423E11"
        android:backgroundTint="@android:color/darker_gray"

        android:backgroundTintMode="screen"
        android:ems="10"
        android:fadingEdge="vertical"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#070303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <EditText
        android:id="@+id/email_signup_activity"
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_marginTop="68dp"
        android:background="#E1423E11"
        android:backgroundTint="@android:color/darker_gray"

        android:backgroundTintMode="screen"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#070303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/last_name_signup_activity" />

    <EditText
        android:id="@+id/password_signup_activity"
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_marginTop="68dp"
        android:background="#E1423E11"
        android:backgroundTint="@android:color/darker_gray"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#070303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email_signup_activity" />

    <Button
        android:id="@+id/signup_button_signup_activity"
        android:layout_width="369dp"
        android:layout_height="111dp"
        android:layout_marginTop="106dp"
        android:background="@android:color/black"
        android:textColor="@android:color/darker_gray"
        android:backgroundTintMode="screen"
        android:text="SIGN UP"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/password_signup_activity"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="38dp"
        android:layout_marginTop="184dp"
        android:text="SignUp to start your new journy"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>